<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".program">

    <View
        android:id="@+id/starry_sky_"
        style="@style/style_main"
        android:layout_width="750dp"
        android:layout_height="850dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/backround"
        android:translationX="-200dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-9dp"
        tools:layout_editor_absoluteY="-60dp" />

    <TextView
        android:id="@+id/Title"
        style="@style/style_main"
        android:layout_width="394dp"
        android:layout_height="118dp"
        android:fontFamily="@font/terminator"
        android:gravity="center"
        android:text="The hatters"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.56" />

    <Button
        android:id="@+id/button"
        style="@style/style_main"
        android:layout_width="156dp"
        android:layout_height="36dp"
        android:background="@color/transparent"
        android:fontFamily="@font/terminator"
        android:onClick="goToProgram"
        android:text="Программа"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/Title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.928" />

    <Button
        android:id="@+id/button2"
        style="@style/style_main"
        android:layout_width="180dp"
        android:layout_height="42dp"
        android:background="@color/transparent"
        android:fontFamily="@font/terminator"
        android:onClick="goToInformation"
        android:text="Информация"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.772" />

    <Button
        android:id="@+id/button4"
        style="@style/style_main"
        android:layout_width="245dp"
        android:layout_height="68dp"
        android:background="@color/transparent"
        android:fontFamily="@font/terminator"
        android:onClick="goToTickets"
        android:shadowColor="#FF00C7"
        android:shadowDx="-5"
        android:shadowDy="-10"
        android:shadowRadius="1"
        android:text="билеты"
        android:textColor="#FFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/view"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:background="@drawable/planet2"
        android:translationY="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Title" />

    <androidx.cardview.widget.CardView
        android:id="@+id/shadow"
        android:layout_width="235dp"
        android:layout_height="138dp"
        android:layout_margin="65dp"
        android:background="@color/black"
        app:cardBackgroundColor="#22000000"
        app:cardCornerRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="235dp"
        android:layout_height="138dp"
        android:layout_margin="90dp"
        android:outlineAmbientShadowColor="@color/black"
        app:cardCornerRadius="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Title"
        app:layout_constraintVertical_bias="0.72"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/informgroup" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/day"
        style="@style/style_main"
        android:layout_width="260dp"
        android:layout_height="55dp"
        android:fontFamily="@font/terminator"
        android:gravity="center"
        android:text="Пятница"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.96" />

    <TextView
        android:id="@+id/sb"
        style="@style/style_main"
        android:layout_width="54dp"
        android:layout_height="44dp"
        android:fontFamily="@font/terminator"
        android:gravity="center"
        android:text="сб"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.99" />

    <TextView
        android:id="@+id/right"
        style="@style/style_main"
        android:layout_width="53dp"
        android:layout_height="70dp"
        android:fontFamily="@font/xanhmono"
        android:gravity="center"
        android:padding="-10dp"
        android:paddingTop="-10dp"
        android:text="&#62;"
        android:textSize="55sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7" />

    <TextView
        android:id="@+id/right2"
        style="@style/style_main"
        android:layout_width="53dp"
        android:layout_height="70dp"
        android:fontFamily="@font/xanhmono"
        android:gravity="center"
        android:padding="-10dp"
        android:paddingTop="-10dp"
        android:text="&#60;"
        android:textSize="55sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7" />

    <TextView
        android:id="@+id/vs"
        style="@style/style_main"
        android:layout_width="54dp"
        android:layout_height="44dp"
        android:fontFamily="@font/terminator"
        android:gravity="center"
        android:text="вс"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.99" />

    <View
        android:id="@+id/top1"
        android:layout_width="410dp"
        android:layout_height="200dp"
        android:background="@drawable/forprogram"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/wtsp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="7dp"
        android:background="@drawable/watsapp"
        app:layout_constraintEnd_toStartOf="@+id/fb"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/fb"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="7dp"
        android:background="@drawable/fb"
        app:layout_constraintEnd_toStartOf="@+id/inst"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/inst"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/inst"
        app:layout_constraintEnd_toStartOf="@+id/ytb"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/ytb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/ytb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/logo"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/logotip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/date"
        style="@style/style_main"
        android:layout_width="173dp"
        android:layout_height="22dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/wallpoet"
        android:gravity="center"
        android:padding="-20dp"
        android:text="23-25 may 2022"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/wtsp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/logo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/date2"
        style="@style/style_main"
        android:layout_width="173dp"
        android:layout_height="31dp"
        android:layout_marginStart="6dp"
        android:fontFamily="@font/wallpoet"
        android:gravity="left"
        android:padding="-20dp"
        android:text="Bunyrevo, Aleksin District"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/logo"
        app:layout_constraintTop_toBottomOf="@+id/date" />

    <View
        android:id="@+id/bottom1"
        android:layout_width="420dp"
        android:layout_height="25dp"
        android:background="@drawable/forprogram"
        android:rotationX="180"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>